<div class="logo">
  <img src="BookBuddy_logo.svg" alt="Logo BookBuddy">
</div>

<div class="home-card">

  <h4>Hello <%= current_user.nickname %>!</h2>
</div>


<div class="last-books">
  <h2>Derniers Ajouts</h2>
  <div class="last-books-cards">
    <% current_user.books.each do |book| %>
      <%= link_to book_path(book) do %>
        <%= render 'partials/books/book_card_portrait', book: book %>
      <% end %>
    <% end %>
  </div>
</div>
