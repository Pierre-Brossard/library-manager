<div class="header-home">
  <div class="header-logo">
    <%= image_tag "BookBuddy_logo.svg", alt: "Logo BookBuddy", class: "book"%>
    <%= image_tag "BookBuddy.svg", alt: "BookBuddy", class:"text" %>
  </div>
  <div class="header-user">
    <i class="fa-solid fa-user"></i>
  </div>
</div>

<div class="home-card">
  <h4>Bienvenue  <strong><%= current_user.nickname %></strong> ! <br>
  <span style="color: grey;">Il y a <strong><%= current_user.books.count %> livres</strong> dans ta bibliothèque...</span></h4>
</div>

<div class="last-books settings">
  <h2><i class="fa-solid fa-sliders home-icon-settings"></i> <span style="text-decoration: underline;
                text-decoration-style: solid;
                text-decoration-color: grey;
                text-decoration-thickness: 0.4rem;
                text-underline-offset: 0.1rem;">Détails</span></h2>
  <div class="home-card-collection">
    <div class="home-card-collection-details">
      <div class="roman-count">
        <strong class='green-text'><%= current_user.books.where(book_type: 'Roman').count %> Roman</strong>(s)
      </div>
      <div class="manga-count">
        <strong class='blue-text'><%= current_user.books.where(book_type: 'Manga').count %> Manga</strong>(s)
      </div>
        <div class="bd-count">
      <strong class='red-text'><%= current_user.books.where(book_type: 'BD').count %> BD</strong>(s)
      </div>
        <div class="poesie-count">
      <strong class='purple-text'><%= current_user.books.where(book_type: 'Poesie').count %> Poésie</strong>(s)
      </div>
    </div>
  </div>
</div>

<div class="last-books">
  <h2><i class="fa-solid fa-book-bookmark home-icon-book"></i> <span style="text-decoration: underline;
                        text-decoration-style: solid;
                        text-decoration-color: #89E219;
                        text-decoration-thickness: 0.4rem;
                        text-underline-offset: 0.1rem;">Derniers Ajouts</span></h2>
  <div class="last-books-cards">
    <% current_user.books.reverse.each do |book| %>
      <%= link_to book_path(book) do %>
        <%= render 'partials/books/book_card_portrait', book: book %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="last-books">
  <h2><i class="fa-solid fa-heart home-icon-heart"></i></i> <span style="text-decoration: underline;
                        text-decoration-style: solid;
                        text-decoration-color: #FF6359;
                        text-decoration-thickness: 0.4rem;
                        text-underline-offset: 0.1rem;">Livres Favoris</span></h2>
  <div class="last-books-cards">
    <% current_user.books.favorite_books('true', current_user).each do |book| %>
      <%= link_to book_path(book) do %>
        <%= render 'partials/books/book_card_portrait', book: book %>
      <% end %>
    <% end %>
  </div>
</div>
