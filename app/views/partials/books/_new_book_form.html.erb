<%= simple_form_for book do |f| %>
  <%= f.input :book_type, collection: Book::TYPES %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :illustrator %>
  <%= f.association :serie %>
  <%= f.input :serie_number %>
  <%= f.input :description %>
  <%= f.input :release, as: :integer %>
  <%= f.input :edition %>

  <%= f.submit 'Ajouter' %>
<% end %>
