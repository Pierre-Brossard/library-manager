<div class="card-close book-card" data-book-content-target="bookDefault">
  <div class="book-img-close"><i class="fa-solid fa-book"></i></div>
  <div class="book-info">
    <p class="book-title"><%= book.title %></p>
    <% if book.serie %>
      <p class="book-series-close">n°<%= book.serie_number %> - <%= book.serie.name %></p>
    <% end %>
  </div>
  <div class="book-actions-close">
    <%# <%= link_to book_path(book) do %>
      <%# <div class="btn btn-details" data-action="click->book-content#stop_bubbling"><i class="fa-solid fa-circle-info"></i></div> %>
    <%# <% end %>
    <% if collection %>
      <form method="patch" action="<%= favorite_collection_path(collection)%>"">
        <button
          data-turbo-method="patch"²
          type="submit"
          class="btn btn-favorite"
          data-action="click->book-content#stop_bubbling">
            <% if collection.is_favorited %>
              <i class="fa-solid fa-heart"></i>
            <% else %>
              <i class="fa-regular fa-heart"></i>
            <% end %>
        </button>
      </form>
    <% else %>
      <form method="post" action="<%= "#{collections_path}?book_id=#{book.id}" %>"">
        <button
          data-turbo-method="patch"²
          type="submit"
          class="btn btn-favorite"
          data-action="click->book-content#stop_bubbling">
            <% if collection.is_favorited %>
              <i class="fa-solid fa-heart"></i>
            <% else %>
              <i class="fa-regular fa-heart"></i>
            <% end %>
        </button>
      </form>
    <% end %>
  </div>
</div>
