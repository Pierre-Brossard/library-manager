<div class="card-close book-card" data-book-content-target="bookDefault">
  <div class="book-img-close"><i class="fa-solid fa-book"></i></div>
  <div class="book-info">
    <p class="book-title"><%= book.title %></p>
    <% if book.serie %>
      <p class="book-series-close">nÂ°<%= book.serie_number %> - <%= book.serie.name %></p>
    <% end %>
  </div>
  <div class="book-actions-close">
    <%# <%= link_to book_path(book) do %>
      <%# <div class="btn btn-details" data-action="click->book-content#stop_bubbling"><i class="fa-solid fa-circle-info"></i></div> %>
    <%# <% end %>
    <% if collection && collection.id %>
        <button
          value="<%= favorite_collection_path(collection) %>"
          data-turbo-method="patch"
          type="submit"
          class="btn btn-favorite"
          data-action="click->book-content#stop_bubbling click->book-content#addFavorite">
            <% if collection.is_favorited %>
              <i class="fa-solid fa-heart"></i>
            <% else %>
              <i class="fa-regular fa-heart"></i>
            <% end %>
        </button>
    <% else %>
        <button
          value="<%= book_collections_path(book) %>"
          type="submit"
          class="btn btn-favorite"
          data-action="click->book-content#stop_bubbling click->book-content#addCollection">
          <i class="fa-solid fa-plus"></i>
        </button>
    <% end %>
  </div>
</div>
